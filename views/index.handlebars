<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h1> Burgers I have eaten</h1>
            <ul>
                {{#each burgers}}
                {{#if eaten}}
                {{>eaten/burgers-eaten eaten=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h1> Burgers I wish to eat!</h1>
            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                {{>eaten/burgers-eaten eaten=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Add burger</h2><br>
            <div>
                <form id="create-form">
                    <div class="form-group">
                        <label for="nBurger">Burger Name: </label>
                        <input type="text" id="nBurger" name="nBurger">
                    </div>
                    <button type="submit" class="cbutton" data-burger="nBurger">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>