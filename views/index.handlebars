<h1> Burders</h1>

<h2> Uneaten burers</h2>

<ul>
    {{#each burger}}
    {{#unless eaten}}
    {{> burger/eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burger}}
    {{#if eaten}}
    {{> burger/eaten=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="burger">Burger Name: </label>
        <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>